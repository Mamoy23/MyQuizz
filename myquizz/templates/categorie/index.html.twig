{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1 class="text-center m-2">Categorie index</h1>
    <a href="{{ path('categorie_new') }}" class="btn btn-success m-2"><i class="fas fa-plus mr-1"></i>Create</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-secondary m-1"><i class="far fa-eye"></i></a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary m-1"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
