{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1 class="text-center m-2">Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>IdQuizz</th>
                <td>{{ question.idQuizz }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.question }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}" class="btn btn-secondary m-1"><i class="fas fa-arrow-left mr-1"></i>Back</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-primary m-1"><i class="far fa-edit"></i></a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
