{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h2 class="text-center m-2">{{categorie.name}}</h2>
    <div class="text-center grid">
        {% for quizz in quizzes %}
            <a href="{{ path('main', {'id': quizz.id}) }}">
            <div class="item">
                {{ quizz.name }}
            </div>
            </a>
        {% endfor %}
    </div>

    <a href="{{ path('categorie') }}" class="btn btn-secondary m-2"><i class="fas fa-arrow-left mr-1"></i>Back</a>
{% endblock %}
