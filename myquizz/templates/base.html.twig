<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
            <link href="{{ asset('main.css') }}" rel="stylesheet"/>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{path('home')}}">MyQuizz</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('categorie')}}">Categories</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="nav-link" href="{{path('score')}}"><i class="far fa-star mr-1"></i>Scores</a>
                    <a class="nav-link" href="{{path('quizz_new')}}">Create quizz</a>
                    {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-cubes mr-1"></i>Admin
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('users_index') }}">Users</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('categorie_index') }}">Categories</a>
                    <a class="dropdown-item" href="{{ path('quizz_index') }}">Quizz</a>
                    <a class="dropdown-item" href="{{ path('question_index') }}">Questions</a>
                    <a class="dropdown-item" href="{{ path('reponse_index') }}">Reponses</a>
                    </div>
                </li>
                {% endif %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{path('home')}}" class="mr-1 mb-0 text-dark"><i class="far fa-user mr-1"></i>{{ app.user.login }}</a>
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout </a></ br>
                {% else %}
                    <a class="mr-2 btn btn-primary" href="{{ path('app_login') }}">Login </a></ br>
                    <a class="btn btn-secondary" href="{{ path('app_register') }}">Register </a>
                {% endif %}
            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}     
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
