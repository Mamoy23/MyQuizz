{% extends 'base.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block body %}
    <h1 class="text-center m-2">Reponse</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reponse.id }}</td>
            </tr>
            <tr>
                <th>IdQuestion</th>
                <td>{{ reponse.idQuestion }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ reponse.reponse }}</td>
            </tr>
            <tr>
                <th>ReponseExpected</th>
                <td>{{ reponse.reponseExpected ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reponse_index') }}" class="btn btn-secondary m-1"><i class="fas fa-arrow-left mr-1"></i>Back</a>

    <a href="{{ path('reponse_edit', {'id': reponse.id}) }}" class="btn btn-primary m-1"><i class="far fa-edit"></i></a>

    {{ include('reponse/_delete_form.html.twig') }}
{% endblock %}
